                <ScrollViewer VerticalAlignment="Stretch" Name="ScrollViewer1" HorizontalScrollBarVisibility="Auto">
                    <Grid MinHeight="580" MaxHeight="1500" MinWidth="500">
                        <view:MainWindowTabControl/>

